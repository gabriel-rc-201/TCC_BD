                      "tipo": { "type": "string" },
                      "nivel": { "type": "string" },
                      "local_publicacao": { "type": "string" },
                      "data_publicacao": { "type": "string" },
                      "area_estudo_id": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/trabalhos/:titulo": {
